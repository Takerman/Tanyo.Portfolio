@inject SharedLocalizationService sharedLocalizer
@inject IViewLocalizer localizer
@{
    ViewData["Title"] = "Post";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="blog_area single-post-area section-margin">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 posts-list">
                <div class="single-post">
                    <div class="blog_details">
                        <h2>
                            @localizer["Raspberry Pi"]
                        </h2>
                        <ul class="blog-info-link mt-3 mb-4">
                            <li><i class="ti-user"></i> @localizer["Tanyo Ivanov"]</li>
                            <li><i class="ti-calendar"></i> @localizer["Feb"] 28, 2020</li>
                        </ul>
                        <p style="width: 60%; text-align: center; margin: auto; padding-bottom: 40px;">
                            @localizer["Hello friends"],<br />
                            @localizer["In this video I'll show you how I made my appartment smarter with a few raspberry pi 3B+ boards. I'm using the PIs for web server, media center, smart home, database server, to save pictures from a camera and more."]<br />
                            @localizer["The video is long, but it gives a lot of information how to configure the server. If you have difficulties write a comment or send me a message, I'll try to answer you when I have time."]
                        </p>
                        <table style="width: 100%; margin-bottom: 40px;">
                            <tr>
                                <td>
                                    <iframe width="420" height="315"
                                            src="https://www.youtube.com/embed/6hcQnvlaq68">
                                    </iframe>
                                </td>
                                <td class="text-center">
                                    <strong>@localizer["Here are the resources"]</strong><br />
                                    <a href="https://www.raspberrypi.org/products/raspberry-pi-3-model-b-plus" target="_blank">Raspberry Pi 3B+</a><br />
                                    <a href="https://docs.docker.com/engine/swarm" target="_blank">Docker Swarm @localizer["Cluster"]</a><br />
                                    <a href="https://howchoo.com/g/njy4zdm3mwy/how-to-run-a-raspberry-pi-cluster-with-docker-swarm" target="_blank">@localizer["How to cluster"]</a><br />
                                    <a href="https://www.home-assistant.io/hassio" target="_blank">Home Assistant / Hass.io</a><br />
                                    <a href="https://kodi.tv" target="_blank">@localizer["Kodi"]</a><br />
                                    <a href="https://mobaxterm.mobatek.net" target="_blank">MobaXterm</a><br />
                                    <a href="https://dietpi.com" target="_blank">DietPi</a><br />
                                    <a href="https://dietpi.com/phpbb/viewtopic.php?t=5" target="_blank">Dietpi @localizer["Forum"]</a><br />
                                    <a href="https://sonoff.tech/product/wifi-diy-smart-switches/sonoff-mini" target="_blank">Sonoff Mini</a><br />
                                    @localizer["Hope you enjoyed, see you in the next videos"] :)
                                    @localizer["Regards"],<br />
                                    @localizer["Tanyo Ivanov"]
                                </td>
                            </tr>
                        </table>
                        <div id="disqus_thread"></div>
                        <script>
                            const PAGE_URL = 'https://tivanov.takerman.net';
                            const PAGE_IDENTIFIER = location.href;
                            var disqus_config = function () {
                                this.page.url = PAGE_URL;
                                this.page.identifier = PAGE_IDENTIFIER;
                            };
                            (function () {
                                var d = document, s = d.createElement('script');
                                s.src = 'https://tanyo-takerman-net-1.disqus.com/embed.js';
                                s.setAttribute('data-timestamp', +new Date());
                                (d.head || d.body).appendChild(s);
                            })();
                        </script>
                        <noscript>@localizer["Please enable JavaScript to view the comments."]</noscript>

</div>
                </div>
            </div>
        </div>
    </div>
</section>